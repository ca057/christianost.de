---
import "../styles/variables.css";

const links = [
  { path: "/", name: "Home" },
  { path: "/imprint", name: "Imprint" },
];
---

<footer>
  {links.map((config) => <a href={config.path}>{config.name}</a>)}
</footer>
<style>
  footer {
    margin-top: auto;
    font-size: 75%;
    padding: var(--spacing) 0;
    display: flex;
    justify-content: flex-end;
  }
  footer a {
    margin-left: var(--spacing);
  }
</style>
