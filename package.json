{
  "name": "christianost.de",
  "version": "1.0.0",
  "description": "Code for my awesome online portfolio",
  "main": "",
  "repository": "git@github.com:ca057/christianost.de.git",
  "author": "Christian Ost <christian@christianost.de>",
  "license": "BSD3",
  "private": true,
  "scripts": {
    "server": "mkdir build || :; cd build && python3 -m http.server",
    "compile:pug": "pug -P src -o build -b layouts -w",
    "compile:css": "postcss src/**/*.css -o build/styles.css -w",
    "create:assets": "cp -pr assets build/. && echo FIXME",
    "start": "npm run compile:pug & npm run compile:css & npm run server",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.css",
    "lint": "yarn run lint:js && yarn run lint:css",
    "test": "yarn run lint"
  },
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^8.4.0",
    "stylelint-config-recommended": "^2.0.1"
  }
}
