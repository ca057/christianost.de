    "posthtml": "^0.11.4",
    "posthtml-include": "^1.2.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "svg-to-png": "^4.0.0"
